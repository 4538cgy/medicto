<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_here_is_your_treatment_relativelayout2"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/activity_here_is_your_treatment_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    <TextView
        android:id="@+id/activity_here_is_your_treatment_textview1"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="france"
        android:fontFamily="@font/ubunturegular"
        />

    <TextView
        android:id="@+id/activity_here_is_your_treatment_textview2"
        android:layout_marginTop="6dp"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="20/06/19"
        android:fontFamily="@font/ubunturegular"
        />

    <TextView
        android:id="@+id/activity_here_is_your_treatment_textview3"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_here_is_your_treatment_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HERE IS \n YOUR TREATMENT"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:fontFamily="@font/ubunturegular"
        />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_here_is_your_treatment_recycler"
            android:padding="12dp"
            android:layout_margin="24dp"
            android:layout_below="@+id/activity_here_is_your_treatment_textview3"
            android:background="@drawable/edittext_background"
            android:elevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    <LinearLayout
        android:id="@+id/activity_here_is_your_treatment_linearlayout"
        android:layout_below="@+id/activity_here_is_your_treatment_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:elevation="6dp"
        android:background="@drawable/edittext_background"
        android:gravity="center"
        android:padding="12dp"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="medicine name"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="24dp" android:fontFamily="@font/ubunturegular"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_marginHorizontal="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dose"
                    android:textSize="16dp" android:fontFamily="@font/ubunturegular"
                    />

                <TextView
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background_light_green"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"
                    android:textStyle="bold" android:fontFamily="@font/ubunturegular"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="when"
                    android:textSize="16dp" android:fontFamily="@font/ubunturegular"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/colorGreen"
                    android:text="before meals" android:fontFamily="@font/ubunturegular"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="how long"
                    android:textSize="16dp" android:fontFamily="@font/ubunturegular"
                    />

                <TextView
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background_light_green"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"
                    android:textStyle="bold" android:fontFamily="@font/ubunturegular"
                    />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jours"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack" android:fontFamily="@font/ubunturegular"
                    />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/activity_here_is_your_treatment_linearlayout"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:elevation="6dp"
        >
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add a note"
            />

        <ImageButton
            android:layout_marginRight="8dp"
            android:layout_marginVertical="18dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_add_menu"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>