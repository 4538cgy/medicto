<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment_Tab.Fragment_1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/fragment_1_textview_title"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOUR HISTORY"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textSize="24dp"
            android:textStyle="bold" android:fontFamily="@font/ubunturegular"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />


        <ImageButton
            android:id="@+id/fragment_1_imagebutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_userfull"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="24dp"
        android:id="@+id/fragment_1_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>