<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/activity_sign_up_imagebutton"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_add"
        android:background="@drawable/button_background_light_green"
        android:padding="30dp"
        />

    <EditText
        android:id="@+id/activity_sign_up_edittext"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_sign_up_imagebutton"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp"
        android:background="@drawable/edittext_background"
        android:hint="name *"
        android:textColorHint="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="20dp"
        android:elevation="6dp"
        />

    <Spinner
        android:id="@+id/fragment_user_info_spinner1"
        android:layout_below="@+id/activity_sign_up_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_background"
        android:elevation="6dp"
        />
    <Spinner
        android:id="@+id/fragment_user_info_spinner2"
        android:layout_below="@+id/fragment_user_info_spinner1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_background"
        android:elevation="6dp"
        />

    <Spinner
        android:id="@+id/fragment_user_info_spinner3"
        android:layout_below="@+id/fragment_user_info_spinner2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_background"
        android:elevation="6dp"
        />
    
    <LinearLayout
        android:id="@+id/activity_sign_up_linearlayout"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/fragment_user_info_spinner3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        
        <ToggleButton
            android:id="@+id/activity_sign_up_togglebutton"
            android:layout_marginLeft="90dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background_white"
            android:textOff=" "
            android:textOn="V"
            />

        <TextView
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i agree ... "
            />


        
    </LinearLayout>



</RelativeLayout>