<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/recycler_fragment_instruction_item_textview"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="12dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_background"
        android:text="의약품1"
        android:gravity="center" android:fontFamily="@font/ubunturegular"
        android:elevation="6dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        />

    <TextView
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:id="@+id/recycler_fragment_instruction_item_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정량" android:fontFamily="@font/ubunturegular"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recycler_fragment_instruction_item_textview"
        />

    <TextView
        android:id="@+id/recycler_fragment_instruction_item_textview3"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        android:layout_below="@+id/recycler_fragment_instruction_item_textview2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="3" android:fontFamily="@font/ubunturegular"
        android:gravity="center"
        android:background="@drawable/edittext_background"
        android:elevation="6dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:id="@+id/recycler_fragment_instruction_item_textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지속" android:fontFamily="@font/ubunturegular"
        android:layout_alignBaseline="@+id/recycler_fragment_instruction_item_textview2"
        android:layout_toRightOf="@+id/recycler_fragment_instruction_item_textview2"
        android:layout_marginLeft="80dp"
        />

    <TextView

        android:id="@+id/recycler_fragment_instruction_item_textview5"
        android:layout_width="40dp"
        android:fontFamily="@font/ubunturegular"
        android:layout_height="40dp"
        android:layout_below="@+id/recycler_fragment_instruction_item_textview4"
        android:layout_alignLeft="@+id/recycler_fragment_instruction_item_textview4"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/recycler_fragment_instruction_item_textview3"
        android:background="@drawable/edittext_background"
        android:elevation="6dp"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Spinner

        android:layout_marginLeft="6dp"
        android:layout_marginTop="12dp"
        android:id="@+id/recycler_fragment_instruction_item_spinner"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_background"
        android:elevation="6dp"
        android:layout_toRightOf="@+id/recycler_fragment_instruction_item_textview5"
        android:layout_below="@+id/recycler_fragment_instruction_item_textview4"
        />

    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/recycler_fragment_instruction_item_textview6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하루 중 시간" android:fontFamily="@font/ubunturegular"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/recycler_fragment_instruction_item_textview3"
        />


    <GridLayout
        android:id="@+id/recycler_fragment_instruction_item_gridlayout"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/recycler_fragment_instruction_item_textview6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:columnCount="2"

        >
        <LinearLayout
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/recycler_fragment_instruction_item_button"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="아침"
                android:background="@drawable/edittext_background"
                android:elevation="6dp"
                />
            <Button
                android:id="@+id/recycler_fragment_instruction_item_button2"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="점심"
                android:background="@drawable/edittext_background"
                android:elevation="6dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/recycler_fragment_instruction_item_button3"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="저녁"
                android:background="@drawable/edittext_background"
                android:elevation="6dp"
                />
            <Button
                android:id="@+id/recycler_fragment_instruction_item_button4"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="자기전"
                android:background="@drawable/edittext_background"
                android:elevation="6dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="14dp"
                android:gravity="center"
                >
                <ToggleButton
                    android:id="@+id/recycler_fragment_instruction_item_togglebutton1"

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background_white"
                    android:textOff=" "
                    android:textOn="V"
                    />

                <TextView
                    android:id="@+id/recycler_fragment_instruction_item_textview7"
                    android:layout_marginLeft="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="식전" android:fontFamily="@font/ubunturegular"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ToggleButton
                    android:id="@+id/recycler_fragment_instruction_item_togglebutton2"

                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background_white"
                    android:textOff=" "
                    android:textOn="V"
                    />

                <TextView
                    android:id="@+id/recycler_fragment_instruction_item_textview8"
                    android:layout_marginLeft="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="식후 " android:fontFamily="@font/ubunturegular"
                    />

            </LinearLayout>

        </LinearLayout>

    </GridLayout>

    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/recycler_fragment_instruction_item_textview9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부작용" android:fontFamily="@font/ubunturegular"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/recycler_fragment_instruction_item_gridlayout"
        />

    <GridLayout
        android:id="@+id/recycler_fragment_instruction_item_gridlayout2"
        android:layout_marginTop="16dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:columnCount="2"
        android:layout_below="@+id/recycler_fragment_instruction_item_textview9"
        >
        <LinearLayout

            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/recycler_fragment_instruction_item_button5"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="졸림"
                android:background="@drawable/edittext_background"
                android:elevation="6dp"
                />
            <Button
                android:id="@+id/recycler_fragment_instruction_item_button6"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="두통"
                android:background="@drawable/edittext_background"
                android:elevation="6dp"
                />


        </LinearLayout>

        <LinearLayout

            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/recycler_fragment_instruction_item_button7"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="혈압"
                android:background="@drawable/edittext_background"
                android:elevation="6dp"
                />
            <Button
                android:id="@+id/recycler_fragment_instruction_item_button8"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="구토"
                android:background="@drawable/edittext_background"
                android:elevation="6dp"
                />


        </LinearLayout>

    </GridLayout>




</RelativeLayout>