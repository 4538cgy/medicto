<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:layout_marginLeft="18dp"
        android:id="@+id/recycler_history_textview_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20/16/19"
        />
    <LinearLayout
        android:background="@drawable/edittext_background"
        android:id="@+id/recycler_history_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="6dp"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:layout_margin="12dp"
        >

        <TextView
            android:id="@+id/recycler_history_textview_medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="medicine name"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/font_ubuntu_regular"
            android:textColor="@color/colorBlack"
            android:textSize="22dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:padding="14dp"


                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginVertical="8dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dose"
                    />
                <TextView
                    android:id="@+id/recycler_history_textview_medicine_count"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background_light_green"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:padding="14dp"


                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_marginVertical="8dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="how long"
                    />
                <TextView
                    android:id="@+id/recycler_history_textview_medicine_duration"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background_light_green"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="3"
                    />

                <TextView
                    android:layout_marginVertical="8dp"
                    android:id="@+id/recycler_history_textview_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jours"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>