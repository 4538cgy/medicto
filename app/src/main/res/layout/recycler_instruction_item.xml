<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        >

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittext_background"
            android:elevation="6dp"
            >

        <TextView
            android:layout_marginTop="18dp"
            android:id="@+id/recycler_instruction_item_textview_medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/font_ubuntu_regular"
            android:textColor="@color/colorBlack"
            android:textSize="22dp"

            />

        <LinearLayout
            android:id="@+id/recycleR_instruction_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="6dp"

            android:paddingVertical="12dp"
            >
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/recycler_instruction_item_textview_day2"
                    android:layout_marginVertical="8dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dose"
                    />
                <TextView
                    android:id="@+id/recycler_instruction_item_textview_day"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background_light_green"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/recycler_instruction_item_textview_when"
                    android:layout_marginVertical="8dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="when"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_instruction_item_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginVertical="8dp"
                    android:id="@+id/recycler_instruction_item_textview_timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="before meals"
                    android:textStyle="bold"
                    android:textColor="@color/colorGreen"
                    />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:id="@+id/recycler_instruction_item_textview_duration2"
                    android:layout_marginVertical="8dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="how long"
                    />
                <TextView
                    android:id="@+id/recycler_instruction_item_textview_duration"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background_light_green"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="3"
                    />

                <TextView
                    android:layout_marginVertical="8dp"
                    android:id="@+id/recycler_instruction_item_textview_timing2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jours"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    />
            </LinearLayout>


        </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/recycler_instruction_item_textview_sideeffect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="side effects"
                    />

                <LinearLayout
                    android:layout_marginVertical="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_instruction_item_recycler2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/recycler_instruction_item_textview_time"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdfadf"
            />
    </LinearLayout>
</LinearLayout>