<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DeleteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_exit"
            android:scaleType="centerInside"
            />

    </LinearLayout>

    <TextView
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:textSize="24dp"
        android:fontFamily="@font/font_ubuntu_regular"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DO YOU WANT \n TO PERMANETLY DELETE \n THIS TREATMENT"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/delete_activity_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YES"
            android:layout_marginHorizontal="22dp"
            android:layout_above="@+id/delete_activity_button2"
            android:background="@drawable/edittext_background_green"
            android:elevation="6dp"
            android:layout_marginBottom="16dp"
            />
        <Button
            android:id="@+id/delete_activity_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NO"
            android:layout_marginHorizontal="22dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_background"
            />

    </RelativeLayout>
</LinearLayout>