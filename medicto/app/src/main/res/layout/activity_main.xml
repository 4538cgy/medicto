<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/activity_login_relativeLayout"

    tools:context=".LoginActivity">



    <ImageView

        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_login_imageview_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/medicto_logo_3"
        />

    <LinearLayout
        android:id="@+id/activity_main_linearLayout2"
        android:layout_marginTop="12dp"
        android:layout_below="@id/activity_login_imageview_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_default"
        android:orientation="vertical"
        android:elevation="6dp"
        android:layout_above="@id/activity_main_linearLayout"
        >
        <FrameLayout
            android:id="@+id/activity_main_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

        </FrameLayout>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/activity_main_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >

        <Button

            android:id="@+id/activity_main_button"
            android:layout_marginVertical="12dp"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VALIDATE"
            android:textSize="22dp"
            android:background="@drawable/button_background_green"
            android:fontFamily="@font/ubunturegular"
            />

    </LinearLayout>
</RelativeLayout>