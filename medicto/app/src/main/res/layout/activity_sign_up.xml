<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">



        <ImageButton
            android:id="@+id/activity_sign_up_imagebutton"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add"
            android:background="@drawable/button_background_light_green"
            android:padding="30dp"
            />

        <EditText
            android:id="@+id/activity_sign_up_edittext"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="90dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/activity_sign_up_imagebutton"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:hint="Email *"
            android:textColorHint="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="20dp"
            android:elevation="6dp"
            />

        <EditText
            android:id="@+id/activity_sign_up_edittext2"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="90dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/activity_sign_up_edittext"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:hint="Password"
            android:textColorHint="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:elevation="6dp"
            />
        <EditText
            android:id="@+id/activity_sign_up_edittext3"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="90dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/activity_sign_up_edittext2"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background"
            android:hint="Confirm Password"
            android:textColorHint="@color/colorBlack"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:elevation="6dp"
            />
        <Spinner
            android:id="@+id/activity_sign_up_spinner11"
            android:layout_below="@+id/activity_sign_up_edittext3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext_background"
            android:elevation="6dp"
            android:gravity="center_horizontal"
            />
        <Spinner
            android:id="@+id/activity_sign_up_spinner21"
            android:layout_below="@+id/activity_sign_up_spinner11"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext_background"
            android:elevation="6dp"
            />

        <Spinner
            android:id="@+id/activity_sign_up_spinner31"
            android:layout_below="@+id/activity_sign_up_spinner21"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext_background"
            android:elevation="6dp"
            />







    <LinearLayout

        android:id="@+id/activity_main_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >

        <Button

            android:id="@+id/activity_sign_up_button"
            android:layout_marginVertical="12dp"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VALIDATE"
            android:textSize="22dp"
            android:background="@drawable/button_background_green"
            android:fontFamily="@font/ubunturegular"
            />

    </LinearLayout>

</RelativeLayout>