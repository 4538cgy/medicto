<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/fragment_instruction_item_textview10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_background"
                android:elevation="6dp"
                android:gravity="center"
                android:text="의약품 1"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView

                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="12dp"
                android:id="@+id/fragment_instruction_item_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/fragment_instruction_item_textview10"
                android:fontFamily="@font/ubunturegular"
                />

            <Spinner
                android:id="@+id/fragment_instruction_item_spinner1"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="18dp"
                android:layout_below="@+id/fragment_instruction_item_textview2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="3"
                android:gravity="center"
                android:background="@drawable/edittext_background"
                android:elevation="6dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack" android:fontFamily="@font/ubunturegular"
                />

            <TextView

                android:id="@+id/fragment_instruction_item_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지속"
                android:layout_alignBaseline="@+id/fragment_instruction_item_textview2"
                android:layout_toRightOf="@+id/fragment_instruction_item_textview2"
                android:layout_marginLeft="135dp" android:fontFamily="@font/ubunturegular"
                />

            <Spinner

                android:id="@+id/fragment_instruction_item_spinner2"
                android:layout_width="40dp"

                android:layout_height="40dp"
                android:layout_below="@+id/fragment_instruction_item_textview4"
                android:layout_alignLeft="@+id/fragment_instruction_item_textview4"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/fragment_instruction_item_spinner1"
                android:background="@drawable/edittext_background"
                android:elevation="6dp"
                android:gravity="center"
                android:text="5" android:fontFamily="@font/ubunturegular"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner

                android:layout_marginLeft="6dp"
                android:layout_marginTop="12dp"
                android:id="@+id/fragment_instruction_item_spinner"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:elevation="6dp"
                android:layout_toRightOf="@+id/fragment_instruction_item_spinner2"
                android:layout_below="@+id/fragment_instruction_item_textview4"
                />

            <TextView
                android:layout_marginLeft="12dp"
                android:id="@+id/fragment_instruction_item_textview6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="언제"
                android:fontFamily="@font/ubunturegular"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/fragment_instruction_item_spinner1"
                />


            <GridLayout
                android:id="@+id/fragment_instruction_item_gridlayout"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/fragment_instruction_item_textview6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:columnCount="2"

                >
                <LinearLayout
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/fragment_instruction_item_button"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="아침"
                        android:background="@drawable/edittext_background"
                        android:elevation="6dp"
                        />
                    <Button
                        android:id="@+id/fragment_instruction_item_button2"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="점심"
                        android:background="@drawable/edittext_background"
                        android:elevation="6dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/fragment_instruction_item_button3"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="저녁"
                        android:background="@drawable/edittext_background"
                        android:elevation="6dp"
                        />
                    <Button
                        android:id="@+id/fragment_instruction_item_button4"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="자기전"
                        android:background="@drawable/edittext_background"
                        android:elevation="6dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="14dp"
                        android:gravity="center"
                        >
                        <ToggleButton
                            android:id="@+id/fragment_instruction_item_togglebutton1"

                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/togglebutton_selector"
                            android:textOff=" "
                            android:textOn=" "

                            />

                        <TextView
                            android:id="@+id/fragment_instruction_item_textview7"
                            android:layout_marginLeft="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="식전" android:fontFamily="@font/ubunturegular"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <ToggleButton
                            android:id="@+id/fragment_instruction_item_togglebutton2"

                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/togglebutton_selector"
                            android:textOff=" "
                            android:textOn=" "

                            />

                        <TextView
                            android:id="@+id/fragment_instruction_item_textview8"
                            android:layout_marginLeft="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="식후 " android:fontFamily="@font/ubunturegular"
                            />

                    </LinearLayout>

                </LinearLayout>

            </GridLayout>

            <TextView
                android:layout_marginLeft="12dp"
                android:id="@+id/fragment_instruction_item_textview9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부작용" android:fontFamily="@font/ubunturegular"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/fragment_instruction_item_gridlayout"
                />

            <GridLayout
                android:id="@+id/fragment_instruction_item_gridlayout2"
                android:layout_marginTop="16dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:columnCount="2"
                android:layout_below="@+id/fragment_instruction_item_textview9"
                >
                <LinearLayout

                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/fragment_instruction_item_button5"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="없음"
                        android:background="@drawable/edittext_background"
                        android:elevation="6dp"
                        />
                    <Button
                        android:id="@+id/fragment_instruction_item_button6"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="졸리거나 두통"
                        android:background="@drawable/edittext_background"
                        android:elevation="6dp"
                        />


                </LinearLayout>

                <LinearLayout

                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/fragment_instruction_item_button7"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="혈압"
                        android:background="@drawable/edittext_background"
                        android:elevation="6dp"
                        />
                    <Button
                        android:id="@+id/fragment_instruction_item_button8"
                        android:layout_marginHorizontal="6dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="구토"
                        android:background="@drawable/edittext_background"
                        android:elevation="6dp"
                        />


                </LinearLayout>

            </GridLayout>
            <Button
                android:layout_below="@+id/fragment_instruction_item_gridlayout2"
                android:id="@+id/fragment_instruction_addbutton"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="32dp"
                android:background="@drawable/edittext_background_green"
                android:text="처방 추가"
                />
        </RelativeLayout>

    </ScrollView>



</LinearLayout>