<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"

    android:gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/recycler_square_item_linearlayout"
        android:layout_marginVertical="10dp"

        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/square_background_white"
        android:gravity="center"
        android:elevation="6dp"
        >

        <ImageButton
            android:id="@+id/recycler_square_item_imagebutton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@null"

            android:scaleType="centerInside"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/recycler_square_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cold"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center" android:fontFamily="@font/ubunturegular"
        />
</LinearLayout>