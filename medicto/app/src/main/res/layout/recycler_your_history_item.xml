<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="france"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/06/19"
            android:layout_marginLeft="80dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edittext_background"
        android:elevation="6dp"
        >
        <TextView
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="medicine name"
            android:textStyle="bold"
            android:textSize="24dp" android:fontFamily="@font/ubunturegular"
            android:textColor="@color/colorBlack"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="18dp"
            >

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="8dp"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dose" android:fontFamily="@font/ubunturegular"
                    android:textSize="16dp"
                    />

                <TextView
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background_light_green"
                    android:text="1" android:fontFamily="@font/ubunturegular"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:fontFamily="@font/ubunturegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="how long"
                    android:textSize="16dp"
                    />

                <TextView
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_background_light_green"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"
                    android:textStyle="bold" android:fontFamily="@font/ubunturegular"
                    />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jours"
                    android:textSize="20dp"
                    android:textStyle="bold" android:fontFamily="@font/ubunturegular"
                    android:textColor="@color/colorBlack"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>